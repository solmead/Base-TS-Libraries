{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "module": "system",
    "moduleResolution": "Node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es6",
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "sourceRoot": "./",
    //"outFile": "./Libs.js",
    "outDir": "./lib",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [ "src", "test/jest.setup.ts" ],
  "exclude": [ "node_modules", "**/__tests__/*" ]
}
